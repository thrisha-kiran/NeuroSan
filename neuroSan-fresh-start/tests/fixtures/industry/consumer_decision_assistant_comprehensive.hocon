# Comprehensive simple test case for consumer_decision_assistant agent network
# Tests multiple domain specialists with simple, predictable questions
{
    # Describes what agent to test against
    "agent": "industry/consumer_decision_assistant",

    # Connect to the agent directly (no server required for testing)
    "connections": ["direct"],

    # Timeout for the entire test (10 minutes - multiple domains)
    "timeout_in_seconds": 600,

    # Each interaction tests a different domain with a simple question
    # These are independent questions, not a continuous conversation
    "interactions": [
        {
            # Test 1: Travel decision specialist (Airbnb/Booking/Expedia)
            "text": "Help me book a trip to Dubai",

            "continue_conversation": false,

            "response": {
                "text": {
                    "gist": "The assistant should ask for additional details about the trip such as travel dates, budget, number of travelers, accommodation preferences, or specific activities of interest."
                }
            }
        },
        {
            # Test 2: Retail decision specialist - CarMax (vehicle purchase)
            "text": "I need help buying a used SUV",

            "continue_conversation": false,

            "response": {
                "text": {
                    "gist": "The assistant should ask for details about the SUV preferences such as budget, preferred features, mileage, brand preferences, or intended use."
                }
            }
        },
        {
            # Test 3: Career decision specialist - LinkedIn (job search)
            "text": "Help me find a software engineering job",

            "continue_conversation": false,

            "response": {
                "text": {
                    "gist": "The assistant should ask for details about the job search such as location preferences, experience level, specific technologies or domains, salary expectations, or company type preferences."
                }
            }
        },
        {
            # Test 4: Retail decision specialist - Macy's (shopping)
            "text": "I want to buy a winter coat",

            "continue_conversation": false,

            "response": {
                "text": {
                    "gist": "The assistant should ask for details about the coat purchase such as budget, size, style preferences, color, specific features needed, or occasion."
                }
            }
        }
    ]
}
